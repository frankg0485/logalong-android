<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bgd_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_action_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Expense on"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/discard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_action_discard"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="42dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_action_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="42dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_action_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vendorRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="42dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvVendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#aaa"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_action_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tagRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="42dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#aaa"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_action_right" />

        </LinearLayout>

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/editbox_bgd"
            android:gravity="top"
            android:hint="@string/additional_note_here"
            android:imeOptions="flagNoExtractUi"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#fff"
            android:textColorHint="#d8d8d8"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:background="@color/base_fgd_color"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="0.0"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    style="@style/setTimeButtons"
                    android:text="1" />

                <Button
                    android:id="@+id/b2"
                    style="@style/setTimeButtons"
                    android:text="2" />

                <Button
                    android:id="@+id/b3"
                    style="@style/setTimeButtons"
                    android:text="3" />

                <Button
                    android:id="@+id/plus"
                    style="@style/setTimeButtons"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b4"
                    style="@style/setTimeButtons"
                    android:text="4" />

                <Button
                    android:id="@+id/b5"
                    style="@style/setTimeButtons"
                    android:text="5" />

                <Button
                    android:id="@+id/b6"
                    style="@style/setTimeButtons"
                    android:text="6" />

                <Button
                    android:id="@+id/minus"
                    style="@style/setTimeButtons"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b7"
                    style="@style/setTimeButtons"
                    android:text="7" />

                <Button
                    android:id="@+id/b8"
                    style="@style/setTimeButtons"
                    android:text="8" />

                <Button
                    android:id="@+id/b9"
                    style="@style/setTimeButtons"
                    android:text="9" />

                <Button
                    android:id="@+id/multiply"
                    style="@style/setTimeButtons"
                    android:text="*" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b0"
                    style="@style/setTimeButtons"
                    android:text="0" />

                <Button
                    android:id="@+id/dot"
                    style="@style/setTimeButtons"
                    android:text="." />

                <Button
                    android:id="@+id/backspace"
                    style="@style/setTimeButtons"
                    android:text="&lt;==" />

                <Button
                    android:id="@+id/divide"
                    style="@style/setTimeButtons"
                    android:text="/" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clear"
                        style="@style/setTimeButtonsTBRmargin"
                        android:text="C" />

                    <Button
                        android:id="@+id/cancel"
                        style="@style/setTimeButtonsTBLmargin"
                        android:text="@android:string/cancel" />
                </LinearLayout>

                <Button
                    android:id="@+id/ok"
                    style="@style/setTimeActionButtons"
                    android:layout_weight="1"
                    android:text="@android:string/ok" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
