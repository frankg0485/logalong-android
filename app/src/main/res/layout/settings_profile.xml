<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userIdView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/row_released_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/user_id"
            android:textColor="@color/gray_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/hint_user_id"
            android:imeOptions="flagNoExtractUi"
            android:maxLines="1"
            android:textColor="@color/base_text_color"
            android:textColorHint="#ddd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/checkUserIdAvailability"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/ic_action_search" />

        <ImageView
            android:id="@+id/changePassOption"
            android:layout_width="55dp"
            android:layout_height="@dimen/list_item_height"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_action_overflow" />

        <ImageView
            android:id="@+id/userIdOk"
            android:layout_width="40dp"
            android:layout_height="@dimen/list_item_height"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_action_accept" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/passView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:background="@color/row_released_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/password"
            android:textColor="@color/gray_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userPass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/password_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/base_text_color"
            android:textColorHint="#ddd"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/userPassOk"
            android:layout_width="40dp"
            android:layout_height="@dimen/list_item_height"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_action_accept" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showPassView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp">

        <CheckBox
            android:id="@+id/showPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/btn_check_holo_light"
            android:text="@string/show_password"
            android:textColor="@color/light_gray_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:background="@color/row_released_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/user_name"
            android:textColor="@color/gray_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/hint_user_name"
            android:imeOptions="flagNoExtractUi"
            android:maxLines="1"
            android:textColor="@color/base_text_color"
            android:textColorHint="#ddd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/red_text_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/createUserView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dee0e2"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/createUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_check_holo_light"
                android:text="@string/create_new_user_id"
                android:textColor="@color/light_gray_text_color" />

            <RadioButton
                android:id="@+id/loginUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_check_holo_light"
                android:text="@string/login_with_existing_user_id"
                android:textColor="@color/light_gray_text_color" />
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>


