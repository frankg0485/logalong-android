<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="setTimeButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="setTimeButtonsTBRmargin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="setTimeButtonsTBLmargin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="setTimeActionButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_selector_green</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialogButtons">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/base_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogButton">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/dialog_btn_selector</item>
        <item name="android:textColor">@color/base_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
